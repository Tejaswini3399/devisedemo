<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">List of Projects <%= link_to 'New Project', new_project_path, :class => "pull-right" %></div>

  <!-- Table -->
  <table class="table">
    <thead>
		  <tr>
		    <th>Title</th>
		    <th>Income</th>
		    <th>Expenses</th>
		    <th>Project desc</th>
		    <th>Employee</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
		</thead>

		<tbody>
		  <% @projects.each do |project| %>
		    <tr>
		      <td><%= project.title %></td>
		      <td><%= project.income %></td>
		      <td><%= project.expenses %></td>
		      <td><%= project.project_desc %></td>
		      <td><%= project.employee.full_name%></td>
		      <td><%= link_to 'Show', project %></td>
		      <td><%= link_to 'Edit', edit_project_path(project) %></td>
		      <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    </tr>
		  <% end %>
		</tbody>
  </table>
</div>